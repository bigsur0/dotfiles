[user]
  name = <%= @config.gitconfig["name"] %>
  email = <%= @config.gitconfig["email"] %>
[core]
	editor = vi
[push]
	default = current
[color]
	sh = auto
	status = auto
	branch = auto
	diff = auto
        ui = auto
[mergetool]
        trustExitCode = false
[branch]
	autosetuprebase = remote
        autosetupmerge = true
[alias]
      st = status
      ci = commit
      br = branch
      co = checkout
      df = diff
      dfns = diff --name-status
      lg = log -p
      lol = log --graph --decorate --pretty=oneline --abbrev-commit
      lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
      ls = ls-filesco = checkout
      cp = cherry-pick
[receive]
	denyDeleteCurrent = warn
